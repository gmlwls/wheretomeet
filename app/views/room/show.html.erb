<div class="users">
<%@room.places.each do |place|%>
    <div class="user<%=place.user_id%>">
        <%=form_for place,url: find_path(params[:id]),method: :get do |f|%>
            <%=f.hidden_field :user_id, placeholder: place.user_id %>
            <%=place.user_id%> :
            <%=f.number_field :lat, class: "lat", placeholder: place.lat, step: "0.0000001"%>
            <%=f.number_field :lng, class: "lng", placeholder: place.lng, step: "0.0000001"%>
            <%if place.user_id ==current_user.id%>
                <%=f.submit%>
            <%end%>
            <% if @creator && place.user_id!=current_user.id %>
                <%=link_to '삭제', destroy_member_path(place.id) %>
            <% end%>
        <%end%>
    </div>
<%end%>
</div>

